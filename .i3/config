#bar Config, black and blue/white bar
bar {
	mode hide
        status_command i3status
	font pango: Ubuntu sans mono 8

	colors{
	background #333333
	statusline #ffffff
	separator #ffffff
        focused_workspace  #112233     $white        #000088
        active_workspace   #112233        $white         #003388
        inactive_workspace #335588       #778899         #ffffff
        urgent_workspace   $rd        $rd         $tx
}
}

